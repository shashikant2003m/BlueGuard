<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Greeting Section -->
            <LinearLayout
                android:id="@+id/greetingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, userðŸ‘‹"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your location: Chennai Beach"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="4dp" />

                <!-- Searchable Beach Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/locationDropdownLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/autoCompleteBeaches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Beach Location"
                        android:inputType="none"
                        android:dropDownHeight="400dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- AI Recommendation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAiRecommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <TextView
                        android:id="@+id/tvSuitability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suitability: ðŸŸ¢ Safe"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32" />

                    <TextView
                        android:id="@+id/tvConditionSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waves are calm, safe for swimming and beach walk."
                        android:textSize="15sp"
                        android:textColor="#424242"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/tvToughness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toughness Level: â­â­ Easy"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/tvForecastDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forecast: Safe for next 6 hours"
                        android:textSize="14sp"
                        android:textColor="#616161"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Navigation Grid -->
            <GridLayout
                android:id="@+id/navigationGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Explore Beaches -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardExploreBeaches"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_map"
                            app:tint="@color/teal_primary"
                            android:contentDescription="Explore beaches icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explore Beach"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Alerts -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAlerts"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_alert"
                            app:tint="#D32F2F"
                            android:contentDescription="Alerts and warnings icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alerts and Warnings"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Quality -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardWaterQuality"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_water"
                            app:tint="#0288D1"
                            android:contentDescription="Water quality icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Quality"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Forecast -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardForecast"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_forecast"
                            app:tint="#388E3C"
                            android:contentDescription="Suitability forecast icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suitability Forecast"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
