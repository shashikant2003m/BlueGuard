<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Background Waves with improved positioning -->
    <View
        android:id="@+id/backgroundWave1"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/wave_circle_1"
        android:alpha="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-150dp"/>

    <View
        android:id="@+id/backgroundWave2"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/wave_circle_2"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <!-- Header Section with Back Button and Title -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp">

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/backButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/glass_bg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="center"
                android:color="@color/white" />

        </androidx.cardview.widget.CardView>

        <!-- Title with Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="16dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_location_pin"
                android:color="@color/white"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvBeachTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore: "
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

        </LinearLayout>


    </LinearLayout>

    <!-- Main content scrollable section with improved spacing -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerSection"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/beachImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:contentDescription="Beach Image"
                android:background="@drawable/default_image"
                android:layout_marginBottom="16dp"/>


            <!-- Overview Section with Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/input_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/teal_bright">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_info"
                                android:layout_gravity="center"
                                android:color="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sectionOverview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overview"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvOverview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Highlights Section with Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/input_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/cyan_bright">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_star"
                                android:layout_gravity="center"
                                android:color="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sectionHighlights"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Highlights"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvHighlights"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Best Time Section with Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/input_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/orange_bright">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_schedule"
                                android:layout_gravity="center"
                                android:color="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sectionBestTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Best Time"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvBestTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Safety Tips Section with Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/input_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/red_bright">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_security"
                                android:layout_gravity="center"
                                android:color="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sectionSafety"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Safety and Tips"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSafety"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nearby Attractions Section with Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/input_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="4dp"
                            android:backgroundTint="@color/purple_bright">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_place"
                                android:layout_gravity="center"
                                android:color="@color/white" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/sectionNearby"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nearby Attractions"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@android:color/white"
                            android:layout_marginStart="12dp"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 🔹 Fullscreen Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
    android:visibility="gone">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_url="https://lottie.host/31988c1d-a0c6-4534-84e5-6792c4bfec29/HLe4gUDWow.lottie" />
    </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>