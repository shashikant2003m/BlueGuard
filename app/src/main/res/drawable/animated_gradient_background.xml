<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    <item android:duration="3000">
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="@color/teal_dark"
                android:centerColor="@color/teal_primary"
                android:endColor="@color/teal_light" />
        </shape>
    </item>
    <item android:duration="3000">
        <shape>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/teal_primary"
                android:centerColor="@color/teal_light"
                android:endColor="@color/teal_bright" />
        </shape>
    </item>
    <item android:duration="3000">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/teal_light"
                android:centerColor="@color/teal_bright"
                android:endColor="@color/teal_dark" />
        </shape>
    </item>
</animation-list>
